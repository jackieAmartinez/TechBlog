<div class="post">
  <article class="card">
    <header class="card-header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.User.username}} on {{format_date post.createdAt}}
      </div>
    </header>
    <div class="card-content">
      <div class="content">
        {{post.body}}
      </div>
    </div>
  </article>

  {{#if post.Comments}}
    <section class="card">
      <header class="card-header">
        <h3>Comments</h3>
      </header>

      <div class="card-content">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
             {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <header class="card-header">
      <h3>Add New Comment</h3>
    </header>

    <div class="card-content">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <div class="field">
        <label class="label" for="comment-body">Comment</label>
        <div class="control">
          <textarea name="comment-body" class="textarea"></textarea>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <button type="submit" class="button is-primary">Submit</button>
        </div>
      </div>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>