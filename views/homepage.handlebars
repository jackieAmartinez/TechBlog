<ul class="post-list">
  {{#each blogPosts}}
   <a class="list-item flex-row justify-space-between box" href="/blogPost/{{id}}">
          <div class="columns is-centered">
        <div class="column is-four-fifths">
          <span>{{title}}</span>
        </div>
        <div class="column">  
          <span>{{format_date created_at}}</span>
        </div>
      </div>
    </a>
  {{/each}}
</ul>
 
